---
import Clock from "./Clock";
---

<div class="menu">
  <a class="button" href="/home">Start</a>
  <Clock client:only="solid-js" />
</div>

<style>
  .menu {
    width: 100%;
    height: 52px;
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: space-between;
    bottom: 0;
    border-top: 2px solid var(--border-grey);
    padding: 8px;
    background-color: var(--bg-color);
  }

  a {
    font-size: 14px;
  }
</style>
