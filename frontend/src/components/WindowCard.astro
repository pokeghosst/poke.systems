---
import { Image } from "astro:assets";

import crossIcon from "../images/cross.svg";

interface Props {
  title: string;
  borderless?: boolean;
  widthContent?: boolean;
  toolbarItems?: string[];
  class?: string;
}

const {
  title,
  borderless = false,
  widthContent = false,
  toolbarItems,
  class: className,
  ...rest
} = Astro.props;
---

<div
  class:list={[
    "window",
    { borderless: borderless, "width-content": widthContent },
    className,
  ]}
  {...rest}
>
  <div class="header">
    <div class="title">{title}</div>
    <div class="header-buttons">
      <div class="close-btn">
        <Image src={crossIcon} alt="cross icon" />
      </div>
    </div>
  </div>
  {
    toolbarItems && (
      <div class="toolbar">
        {toolbarItems.map((item) => (
          <span>{item}</span>
        ))}
      </div>
    )
  }
  <div class="content">
    <slot />
  </div>
</div>

<style>
  .width-content {
    width: max-content;
  }

  .window {
    border: 2px solid var(--border-grey);
    box-shadow: 2px 1px 0 var(--border-grey);
    background-color: var(--bg-color);
  }

  .header {
    border-bottom: 2px solid var(--border-grey);
    display: flex;
  }

  .title {
    padding: 0.5rem;
    flex-grow: 1;
    cursor: default;
  }

  .header-buttons {
    padding: 0 0.5rem;
    border-left: 2px solid var(--border-grey);
    display: flex;
    align-items: center;
  }

  .content {
    padding: 2rem;
    overflow-y: auto;
    max-height: 60vh;
  }

  .toolbar {
    width: 100%;
    border-bottom: 2px solid var(--border-grey);
    display: inline-flex;
  }

  .toolbar span {
    padding: 0.5rem;
  }

  .toolbar span::first-letter {
    text-decoration: underline;
  }

  .toolbar span:hover {
    background-color: var(--border-grey);
    cursor: default;
  }

  .borderless {
    border: none;
    box-shadow: none;
  }

  ::-webkit-scrollbar {
    width: 12px;
  }

  ::-webkit-scrollbar-track {
    background-color: var(--border-grey);
  }

  ::-webkit-scrollbar-thumb {
    background-color: var(--bg-color);
    border-radius: 6px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background-color: var(--bg-color);
  }

  * {
    scrollbar-width: thin;
    scrollbar-color: var(--border-grey) var(--bg-color);
  }
</style>
